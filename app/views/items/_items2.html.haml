- 4.times do
  %section{class: "items-box__container"}
    %h3{class: "text-center"} 
      = link_to "レディース新着アイテム", root_path
    .items-box__content
      - 4.times do
        %section{class: "items-box"}
          = link_to root_path do
            .items-box__photo
              =image_tag "/images/noImage.jpg"
            .items-box__body
              %h3{class: "items-box__body__name font-2"}
                ビーズネックレス
              .items-box__body__num
                .items-box__body__num__price.font-5
                  ¥ 1400円
                .items-box__body__num__like.font-2
                  =fa_icon "heart-o" 

    .view-all
      = link_to "すべての商品を見る", root_path