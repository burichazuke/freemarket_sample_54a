- 4.times do
  %section{class: "items-box__container"}
    %h3{class: "text-center"} 
      = link_to "レディース新着アイテム", root_path
    .items-box__content
      -@ladies_items.each do |item|
        %section{class: "items-box"}
          = link_to item_path(item.id) do
            .items-box__photo      
              - image = item.images.first
              - if image
                = image_tag "#{image.image}"
              - if item.status >= 1
                .items-box__photo__soldout
                  %h2 SOLD
            .items-box__body
              %h3{class: "items-box__body__name font-2"}
                = item.name
              .items-box__body__num
                .items-box__body__num__price.font-5
                  = "¥ #{item.price.to_s(:delimited)}"
                .items-box__body__num__like.font-2
                  = fa_icon "heart-o" 

    .view-all
      = link_to "すべての商品を見る", root_path
    