    },{
      name: "出品した商品-売却済み",
      url: mypage_index_path
    },{
      name: "購入した商品-取引中",
      url: mypage_index_path
  }]

//ヘッダー
%header.header
  .header-inner
    .header-top
      .header-top__img
        = link_to '/',class: 'header-logo-link' do
          = image_tag 'mercari_logo.png', alt: 'mercari', height: '36', width: '134', class: 'header-logo'
                
      = form_tag('/items/search',class:'header-form', method: :get) do
        %input.search{name: "keyword", placeholder: '何かお探しですか？', type: "text", value: "", class:'search-txt-field' }/
        %button.search-icon{title: "検索", type: "submit"}
          =fa_icon 'search'
            
    .header-bottom
      .header-nav
        %ul.header-nav__left
          %li#header-category
            %h2
              = link_to categories_path, class:'header-nav__left__category' do
                = fa_icon 'list',class:'header-nav__left__icon'
                %span.header-nav__left__category__span カテゴリーから探す
            = render '/shared/category-nav'

          %li#header-brand
            %h2
              = link_to '/',class:'header-nav__left__brand' do
                =fa_icon 'tag',class:'header-nav__left__icon'
                %span.b-left__span ブランドから探す 
              = render '/shared/brand-nav'
              
        .header-nav__right
          %ul.header-nav
            - if user_signed_in?
              %li.header-nav__user
                %h2
                  = link_to '/', class:'header-nav__user__link' do
                    = fa_icon 'bell-o',class:'header-user-icon'
                    %span お知らせ
              %li.header-nav__user
                %h2
                  = link_to '/',class:'header-nav__user__link' do
                    = fa_icon 'check',class:'header-user-icon'
                    %span やることリスト
              %li.header-nav__user
                %h2
                  = link_to mypage_index_path,class:'header-nav__user__link' do
                    = image_tag 'mercari_icon.png',size:'32x32',class:'header-user-img'
                    %span マイページ

                  .mypage__nav
                    .mypage__nav.mypage__nav--image
                      .mypage__nav__user-icon
                        %figure
                          = image_tag "mypage_icon.png", size: "60x60"
                        %h2.mypage__nav__user-icon__name
                          testman
                      .mypage__nav__user-icon__number
                        .mypage__nav__user-icon__number--rate
                          評価
                          %span.bold
                            0
                        .mypage__nav__user-icon__number--display
                          出品数
                          %span.bold
                            0

                      .mypage__nav__user-icon__numbers
                        .mypage__nav__user-icon__numbers__list

                          .mypage__nav__user-icon__numbers__sales
                            .mypage__nav__user-icon__numbers__sales--title
                              売上金
                            .mypage__nav__user-icon__numbers__sales--num
                              ¥100
                            .mypage__nav__user-icon__numbers__sales--icon
                              =fa_icon "angle-right", class: 'icon-chek'

                        .mypage__nav__user-icon__numbers__point
                          .mypage__nav__user-icon__numbers__point--title
                            ポイント
                          .mypage__nav__user-icon__numbers__point--num
                            P100
                          .mypage__nav__user-icon__numbers__point--icon
                            =fa_icon "angle-right", class: 'icon-chek'

                        .mypage__nav__user-icon--while

                                  
                        .mypage__side
                          .sidebar
                            %ul.sidebar__lists
                              -mypageheaderlists.each do |list|
                                =link_to list[:url] do
                                  %li.sidebar__lists__list
                                    %p 
                                      =list[:name]
                                    =fa_icon "angle-right"

                            


            - else
              %ul.header-user-list
                %li.header-user-list__new
                  =link_to '新規会員登録',register_user_registration_path
                %li.header-user-list__login
                  =link_to 'ログイン',new_user_session_path
                
- unless current_page?(root_path)
  = render "/shared/header-nav"