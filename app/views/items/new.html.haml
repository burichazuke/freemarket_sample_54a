%main.single__page__main
  .single__page__main__container
    %h2.single__page__main__head
      商品の情報を入力
    = form_for @item, url: "/items", html:{method: :post, class:"single__formsingle__form__items"} do |f|
      .sell-content
        .single__field.single__field--large
          .single__field__label
            = f.label :images , "出品画像"
            %span.single__field__require 必須
          %p 最大10枚までアップロードできます
          .sell-upload--container
            .sell-upload--box
              %span.text-mark 
                ドラッグアンドドロップ
                またはクリックしてファイルをアップロード
              = f.fields_for :images do |image|
                =image.label :image do
                  =fa_icon "image"
                  = image.file_field :image
            
      .sell-content
        .single__field.single__field--large
          .single__field__label
            = f.label :name, "商品名"
            %span.single__field__require 必須
          .single__field__input
            = f.text_field :name, placeholder: "商品名（必須40文字まで）"
        .single__field.single__field--large
          .single__field__label
            = f.label :description, "商品の説明"
            %span.single__field__require 必須
          .single__field__textarea
            = f.text_area :description, placeholder: "商品の説明（必須1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"
           
      .sell-content
        %h3 商品の詳細
        .sell-form-box
          -# .single__field.single__field--large
          -#   .single__field__label
          -#     = f.label :item_description, "カテゴリー"
          -#     %span.single__field__require 必須
          -#   .single__field__select
          -#     = f.select required: "" do
          -#       %option{hidden: "", value: ""} --- 
          -#       %option{value: "1"} レディース
          -#       %option{value: "2"} メンズ
          -#       %option{value: "3"} ベビー・キッズ
          -#       %option{value: "4"} インテリア・住まい・小物
          -#   .single__field__select
          -#     = f.select required: "" do
          -#       %option{hidden: "", value: ""} --- 
          -#       %option{value: "1"} トップス
          -#       %option{value: "2"} ジャケット/アウター
          -#       %option{value: "3"} パンツ
          -#       %option{value: "4"} スカート
          -#   .single__field__select
          -#     = f.select required: "" do
          -#       %option{hidden: "", value: ""} --- 
          -#       %option{value: "1"} Tシャツ/カットソー(半袖/袖なし)
          -#       %option{value: "2"} Tシャツ/カットソー(七分/長袖)
          -#       %option{value: "3"} シャツ/ブラウス(半袖/袖なし)
          -#       %option{value: "4"} シャツ/ブラウス(七分/長袖)
            

          .single__field.single__field--large
            .single__field__label
              = label :size, "サイズ"
              %span.single__field__require 必須
            .single__field__select
              = f.select :size, prompt:"---" do
                %option{hidden: ""} --- 
                %option{value: "XXS以下"} XXS以下
                %option{value: "XS(SS)"} XS(SS)
                %option{value: "S"} S
                %option{value: "M"} M

          -# .single__field.single__field--large
          -#   .single__field__label
          -#     = f.label :item_description, "ブランド"
          -#     %span.single__field__require.single__field__require--gray 任意
          -#   .single__field__input
          -#     = f.text_field :item_name, placeholder: "例) シャネル"

          .single__field.single__field--large
            .single__field__label
              = f.label :item_description, "商品の状態"
              %span.single__field__require 必須
            .single__field__select
              = f.select :condition, required: "" do
                %option{hidden: "", value: ""} --- 
                %option{value: "新品/未使用"} 新品/未使用
                %option{value: "未使用に近い"} 未使用に近い
                %option{value: "目立った傷や汚れなし"} 目立った傷や汚れなし
                %option{value: "やや傷や汚れあり"} やや傷や汚れあり
                %option{value: "傷や汚れあり"} 傷や汚れあり
                %option{value: "全体的に状態が悪い"} 全体的に状態が悪い
         

      .sell-content
        %h3 配送について
        .sell-form-box
          .single__field.single__field--large
            .single__field__label
              = f.label :item_description, "配送料の負担"
              %span.single__field__require 必須
            .single__field__select
              = f.select :shipping_fee, required: "" do
                %option{hidden: "", value: ""} --- 
                %option{value: "送料負担(出品者負担)"} 送料負担(出品者負担)
                %option{value: "着払い(購入者負担)"} 着払い(購入者負担)
          
          .single__field.single__field--large
            .single__field__label
              = f.label :item_description, "配送の方法"
              %span.single__field__require 必須
            .single__field__select
              = f.select :shipping_method, required: "" do
                %option{hidden: "", value: ""} --- 
                %option{value: "未定"} 未定
                %option{value: "らくらくメルカリ便"} らくらくメルカリ便
                %option{value: "ゆうメール"} ゆうメール
                %option{value: "レターパック"} レターパック

          .single__field.single__field--large
            .single__field__label
              = f.label :item_description, "発送元の地域"
              %span.single__field__require 必須
            .single__field__select
              = f.select :prefecture, required: "" do
                %option{hidden: "", value: ""} --- 
                %option{value: "北海道県"} 北海道県
                %option{value: "青森県"} 青森県
                %option{value: "岩手県"} 岩手県
                %option{value: "宮城県"} 宮城県

          .single__field.single__field--large
            .single__field__label
              = f.label :item_description, "発送までの日数"
              %span.single__field__require 必須
            .single__field__select
              = f.select :shipping_date, required: "" do
                %option{hidden: "", value: ""} --- 
                %option{value: "1~2日で発送"} 1~2日で発送
                %option{value: "2~3日で発送"} 2~3日で発送
                %option{value: "4~7日で発送"} 4~7日で発送

      .sell-content
        %h3 販売価格(300〜9,999,999)
        .sell-form-box
          %ul.sell-price
            %li.form-group
              .single__field--2
                .single__field__label__left
                  = f.label :item_description, "価格"
                  %span.single__field__require 必須
                .single__field__label__right
                  %p ¥
                  .single__field__input.single__field__input--right
                    = f.text_field :price, placeholder: "例) 300" 
                 
            %li.sellfee 
              .l-left 販売手数料
              .l-right 100
            %li.sellprofit 
              .l-left 販売利益
              .l-right 900

      .sell-content
        .sell--box
          %p 禁止されている出品、行為を必ずご確認ください。
          %p またブランド品でシリアルナンバー等がある場合はご記載ください。偽ブランドの販売は犯罪であり処罰される可能性があります。
          %p また、出品をもちまして加盟店規約に同意したことになります。

          %p.single__field__text.single__field__text--center
          = f.submit "出品する", class: "single__form__send-btn" 
          = link_to root_path do
            = f.submit "もどる", class: "single__form__send-btn single__form__send-btn--gray single__form__send-btn--small" 
     
