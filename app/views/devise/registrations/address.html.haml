// 3つ目のページ
%main.single__page__main
  .single__page__main__container
    %h2.single__page__main__head
      お届け先住所入力
    = form_for @address, url: create_address_path, html: {method: :post, class: "single__form"} do |f|
      = render partial: "shared/address", locals: { f: f }
      = f.submit "次へ進む", class: "single__form__send-btn"
