:ruby
  mypageheaderlists = [{
      name: "いいね！一覧",
      url: mypage_index_path
    },{
      name: "出品した商品-出品中",
      url: mypage_index_path
    },{
      name: "出品した商品-取引中",
      url: mypage_index_path
    },{
      name: "出品した商品-売却済み",
      url: mypage_index_path
    },{
      name: "購入した商品-取引中",
      url: mypage_index_path
  }]

.mypage__nav
  .mypage__nav__image
    .mypage__nav__user__icon
      %figure
        = image_tag current_user.image.url, size: "60x60"
      %h2.mypage__nav__user__icon__name
        = current_user.nickname

    .mypage__nav__user__review
      = link_to mypage_index_path, class: "header-mypage-number" do
        .mypage__nav__user__review--rate
          評価:
          %span.bold
            0
      = link_to mypage_index_path, class: "header-mypage-number" do
        .mypage__nav__user__review--display
          出品数:
          %span.bold
            0

    .mypage__nav__user__number
      .mypage__nav__user__number__list
        = link_to mypage_index_path, class: "header-mypage-number" do
          .mypage__nav__user__number--box
            .number--title
              売上金
            .number--sales
              ¥100
            .number--icon
              =fa_icon "angle-right", class: 'icon-chek'
        = link_to mypage_index_path, class: "header-mypage-number" do
          .mypage__nav__user__number--box
            .number--title
              ポイント
            .number--point
              P100
            .mypage__nav__user__number--box--icon
              =fa_icon "angle-right", class: 'icon-chek'

      .mypage__nav__user--while

      .mypage__side
        .sidebar
          %ul.sidebar__lists
            -mypageheaderlists.each do |list|
              =link_to list[:url] do
                %li.sidebar__lists__list
                  %p 
                    =list[:name]
                  =fa_icon "angle-right"